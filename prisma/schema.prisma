generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum MaterialType {
  LESSON
  HOMEWORK
  EXAM
}

enum SubmissionStatus {
  PENDING
  REVIEWED
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String?      @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role         @default(USER)
  accounts      Account[]
  sessions      Session[]
  enrollments   Enrollment[]
  submissions   Submission[]
  progresses    Progress[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model Course {
  id           String       @id @default(cuid())
  title        String
  description  String
  price        Int
  durationDays Int
  createdAt    DateTime     @default(now())
  modules      Module[]
  enrollments  Enrollment[]
  progresses   Progress[]

  @@index([createdAt])
}

model Module {
  id        String     @id @default(cuid())
  title     String
  order     Int
  courseId  String
  course    Course     @relation(fields: [courseId], references: [id], onDelete: Cascade)
  materials Material[]

  @@index([courseId])
  @@unique([courseId, order])
}

model Material {
  id          String         @id @default(cuid())
  title       String
  type        MaterialType
  content     String
  order       Int
  moduleId    String
  module      Module         @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  submissions Submission[]

  @@index([moduleId])
  @@unique([moduleId, order])
}

model Enrollment {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@index([courseId])
  @@index([expiresAt])
}

model Submission {
  id              String           @id @default(cuid())
  userId          String
  materialId      String
  fileUrl         String
  extractedText   String?
  status          SubmissionStatus @default(PENDING)
  aiScore         Int?
  teacherScore    Int?
  aiFeedback      String?
  teacherFeedback String?
  createdAt       DateTime         @default(now())
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  material        Material         @relation(fields: [materialId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([materialId])
  @@index([createdAt])
}

model Progress {
  id                 String  @id @default(cuid())
  userId             String
  courseId           String
  completedMaterials Int
  percent            Float
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  course             Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@index([courseId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
